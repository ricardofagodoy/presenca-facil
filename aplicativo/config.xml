<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.presencafacil.app" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PresencaFacil</name>
    <description>
        Presenca Facil - Mobile App
    </description>
    <author email="presencafacil@gmail.com" href="http://cordova.io">
        AFRS Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/resources/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="www/resources/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/resources/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/resources/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="www/resources/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="www/resources/android/mipmap-xxxhdpi/ic_launcher.png" />
        <splash density="port-hdpi" src="www/resources/android/splash/drawable-hdpi/screen.png" />
        <splash density="port-ldpi" src="www/resources/android/splash/drawable-ldpi/screen.png" />
        <splash density="port-mdpi" src="www/resources/android/splash/drawable-mdpi/screen.png" />
        <splash density="port-xhdpi" src="www/resources/android/splash/drawable-xhdpi/screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/resources/ios/AppIcon.appiconset/Icon-App-60x60@3x.png" width="180" />
        <icon height="60" src="www/resources/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" />
        <icon height="120" src="www/resources/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" />
        <icon height="76" src="www/resources/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" />
        <icon height="152" src="www/resources/ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" />
        <icon height="40" src="www/resources/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" />
        <icon height="80" src="www/resources/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" />
        <icon height="57" src="www/resources/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" />
        <icon height="114" src="www/resources/ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" />
        <icon height="29" src="www/resources/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" />
        <icon height="58" src="www/resources/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" />
        <splash height="480" src="www/resources/ios/splash/320x480.png" width="320" />
        <splash height="960" src="www/resources/ios/splash/640x960.png" width="640" />
        <splash height="1024" src="www/resources/ios/splash/768x1024.png" width="768" />
        <splash height="2048" src="www/resources/ios/splash/1536x2048.png" width="1536" />
        <splash height="1136" src="www/resources/ios/splash/640x1136.png" width="640" />
        <splash height="1334" src="www/resources/ios/splash/750x1334.png" width="750" />
        <splash height="2208" src="www/resources/ios/splash/1242x2280.png" width="1242" />
    </platform>
    <hook src="scripts/build.sh" type="before_prepare" />
    <engine name="browser" />
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.3" />
    <plugin name="cordova-plugin-ble-central" spec="^1.1.4">
        <variable name="BLUETOOTH_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-compat" spec="^1.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
</widget>
